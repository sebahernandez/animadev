---
export interface Props {
	title: string;
	body:string;
	icon:string;
}

const {title, body, icon} = Astro.props;
---
<div class="w-full sm:w-1/2 lg:w-1/3 p-10 m-5 bg-orange-50 rounded-lg">
	<div class="flex items-center">
		<i class={`${icon} text-amber-600 text-xl mr-2`}></i>
		<h3 class="font-bold text-amber-600 text-2xl py-2">{title}</h3>
	</div>
		<p class="text-gray-500">{body}</p>
</div>
