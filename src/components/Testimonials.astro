---

export interface Props {
	name: string;
	content:string;
	img:string;
  website:string;
}

const {name, content, img, website} = Astro.props;
---

<figure class="w-full sm:w-1/2 lg:w-1/4 p-6 m-2 bg-gray-100 rounded-lg flex flex-col items-center text-center">
  <blockquote class="my-4">{content}</blockquote>
  <div class="mx-auto">
    <img class="mx-auto rounded-full w-16 h-16 object-cover" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sq-sample1.jpg" alt="sq-sample1"/>
    <h5>{name} </h5>
    <p>{website}</p>
  </div>
</figure>

